    "version": "0.2.0",
    "configurations": [
        {
            "name": "payment-python",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/payment/payment.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/payment",
            "raftt": {
                "workload": "payment"
            }
        },
        {
            "name": "dispatch-go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/dispatch/main.go",
            "cwd": "${workspaceFolder}/dispatch",
            "raftt": {
                "workload": "dispatch"
            }
        },
        {
            "name": "cart-nodejs",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/cart/server.js",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "cwd": "${workspaceFolder}/cart",
            "raftt": {
                "workload": "cart"
            }
        },
        {
            "name": "catalogue-nodejs",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/catalogue/server.js",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "cwd": "${workspaceFolder}/catalogue",
            "raftt": {
                "workload": "catalogue"
            }
        },
        {
            "name": "user-nodejs",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/user/server.js",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "cwd": "${workspaceFolder}/user",
            "raftt": {
                "workload": "user"
            }
        },
    ]
}